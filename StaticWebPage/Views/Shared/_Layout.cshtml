<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

</head>
<body>
    <div class="main-nav1">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container header">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="navbar-link">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="navbar-link">@Html.ActionLink("About", "About", "Home")</li>
                        <li class="navbar-link">@Html.ActionLink("Contacts", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
            <div class="container body-content">

                @RenderBody()

                <hr />
            </div>

        <footer>
            <div class="footer-text">

                <div class="head">
                    <h3>Visit also:</h3>
                </div>

                <ul class="footer-left">
                    <li class="footer-list">
                        <a href="https://www.facebook.com/" target="_blank">
                            <img src="~/Content/Images/facebook_logo.jpg" width="35" height="35" />
                        </a>
                    </li>

                    <li class="footer-list">
                        <a href="https://twitter.com/" target="_blank">
                            <img src="~/Content/Images/twitter_logo.jpg" width="35" height="35" />
                        </a>
                    </li>

                    <li class="footer-list">
                        <a href="https://www.instagram.com/" target="_blank">
                            <img src="~/Content/Images/Instagram_logo.jpg" width="35" height="35" />
                        </a>
                    </li>
                </ul>

                <ul class="footer-right">
                    <li class="FAQ"><a href="https://www.google.com" target="_blank">FAQ</a></li>
                    <li class="FAQ"><a href="https://en.wikipedia.org/wiki/Minions_%28film%29" target="_blank">ABOUT</a></li>
                </ul>

